<h1>Edit Ingredient for <%= @recipe.title %></h1>

<%= form_with(model: [@recipe, @ingredient], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.text_field :quantity, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit 'Update Ingredient', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', recipe_ingredients_path(@recipe), class: 'btn btn-secondary' %>