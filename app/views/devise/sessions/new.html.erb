<section class="bg-light py-3 py-md-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
        <div class="card border border-light-subtle rounded-3 shadow-sm">
          <div class="card-body p-3 p-md-4 p-xl-5">
            <div class="text-center mb-3">
              <a href="#!">
                <img src="https://png.pngtree.com/png-clipart/20221001/ourmid/pngtree-fast-food-big-ham-burger-png-image_6244235.png" alt="BootstrapBrain Logo" width="175" height="175">
              </a>
            </div>
            <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Sign in to your account</h2>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="row gy-2 overflow-hidden">
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email", placeholder: "name@example.com", required: true %>
                    <%= f.label :email, class: "form-label" %>
                  </div>
                </div>

                <div class="col-12">
                  <div class="form-floating mb-3">
                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "password", placeholder: "Password", required: true %>
                    <%= f.label :password, class: "form-label" %>
                  </div>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="col-12">
                    <div class="d-flex gap-2 justify-content-between">
                      <div class="form-check">
                        <%= f.check_box :remember_me, class: "form-check-input", id: "rememberMe" %>
                        <%= f.label :remember_me, "Keep me logged in", class: "form-check-label text-secondary" %>
                      </div>
                      <a href="#!" class="link-primary text-decoration-none">Forgot password?</a>
                    </div>
                  </div>
                <% end %>

                <div class="col-12">
                  <div class="d-grid my-3">
                    <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
                  </div>
                </div>

                <div class="col-12">
                  <p class="m-0 text-secondary text-center">Don't have an account? 
                    <%= link_to 'Sign up', new_user_registration_path, class: "link-primary text-decoration-none" %>
                  </p>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
