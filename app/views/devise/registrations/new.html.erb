<!-- Sign-up Page with Bootstrap Styling -->
<section class="bg-light py-3 py-md-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
        <div class="card border border-light-subtle rounded-3 shadow-sm">
          <div class="card-body p-3 p-md-4 p-xl-5">
            
            <div class="text-center mb-3">
              <a href="#!">
                <img src="https://png.pngtree.com/png-clipart/20221001/ourmid/pngtree-fast-food-big-ham-burger-png-image_6244235.png" alt="BootstrapBrain Logo" width="175" height="175">
              </a>
            </div>
            <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Zarejestruj się</h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="row gy-2 overflow-hidden">
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email", placeholder: "name@example.com", required: true %>
                    <%= f.label :email, class: "form-label" %>
                  </div>
                </div>

                <div class="col-12">
                  <div class="form-floating mb-3">
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "password", placeholder: "Hasło", required: true %>
                    <% if @minimum_password_length %>
                      <small class="text-muted">
                        (<%= @minimum_password_length %> znaków minimum)
                      </small>
                    <% end %>
                    <%= f.label :password, class: "form-label" %>
                  </div>
                </div>

                <div class="col-12">
                  <div class="form-floating mb-3">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "password_confirmation", placeholder: "Potwierdź hasło", required: true %>
                    <%= f.label :password_confirmation, class: "form-label" %>
                  </div>
                </div>

                <div class="col-12">
                  <div class="d-grid my-3">
                    <%= f.submit "Zarejestruj się", class: "btn btn-primary btn-lg" %>
                  </div>
                </div>

                <div class="col-12">
                  <p class="m-0 text-secondary text-center">Już posiadasz konto? 
                    <%= link_to 'Zaloguj się', new_user_session_path, class: "link-primary text-decoration-none" %>
                  </p>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
